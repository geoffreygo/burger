<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron mt-3">
                <h1 class="display-1 text-center">GOOD Burgers!</h1>
            </div>
        </div>

    </div>

    <div class="row add no-gutters">
        <div class="col-md-4">
            <div class="card mt-3">
                <div class="card ib mt-3 ml-3" id="addit">
                    <h1 class="text-center pt-3">Add a Burger</h1>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mt-3">
                <form class="create-form">
    
                    <div class="form-group ib float-left">
                        <label for="addBurger">Burger:</label>
                        <input class="form-control" type="text" placeholder="New burger" id="addBurger" name="burger">
                    </div>
    
                    <div class="form-group ib float-left">
                        <label for="eaten">Eaten?</label><br>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="eaten" value="1" checked> Eaten<br>
    
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="eaten" value="0"> To Eat
                        </div>
                    </div>
    
                    <button type="submit" class="btn btn-success btn-lg mt-4 ib">Add Burger</button>
                </form>
            </div>
        </div>
    </div>

    <div class="row burgers">
        <div class="col-md">
            <div class="card mt-3 mb-3">
                <div class="card mt-3 ml-3 mr-3">
                    <h1 class="text-center mt-2">Burgers to eat!</h1>
                </div>
                <ul>
                    {{#each burgers}} {{#unless devoured}} {{> burger-block eaten=true}} {{/unless}} {{/each}}
                </ul>

            </div>
        </div>
        <div class="col-md">
            <div class="card mt-3 mb-3">
                <div class="card mt-3 ml-3 mr-3">
                    <h1 class="text-center mt-2">Burgers you've eaten!</h1>
                </div>
                <ul>
                    {{#each burgers}} {{#if devoured}} {{> burger-block eaten=false}} {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    </div>


</div>